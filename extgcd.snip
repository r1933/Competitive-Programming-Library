snippet extgcd
options head
    // find (x, y) s.t. ax + by = gcd(a, b)
    // |x| <= b, |y| <= a
    // return gcd(a, b)
    template <class T>
    T extgcd(T a, T b, T &x, T &y) {
        T g = a;
        x = 1, y = 0;
        if (b != 0) {
            g = extgcd(b, a % b, y, x);
            y -= (a / b) * x;
        }
        return g;
    }
